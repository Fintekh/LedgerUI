import { formatDateRange } from '../date-utils';

describe('formatDateRange', () => {
  test('formats date range correctly', () => {
    const startDate = new Date('2025-05-05');
    const endDate = new Date('2025-05-11');
    
    const result = formatDateRange(startDate, endDate);
    expect(result).toBe('May 5 - May 11, 2025');
  });

  test('handles different months', () => {
    const startDate = new Date('2025-05-26');
    const endDate = new Date('2025-06-01');
    
    const result = formatDateRange(startDate, endDate);
    expect(result).toBe('May 26 - June 1, 2025');
  });

  test('handles different years', () => {
    const startDate = new Date('2025-12-29');
    const endDate = new Date('2026-01-04');
    
    const result = formatDateRange(startDate, endDate);
    expect(result).toBe('Dec 29, 2025 - Jan 4, 2026');
  });
});
